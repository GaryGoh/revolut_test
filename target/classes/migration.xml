<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        logicalFilePath="1.0">

    <changeSet id="initial_schema" author="mgao">
        <createTable tableName="accounts">
            <column name="id" type="varchar(32)"/>
            <column name="first_name" type="varchar(16)"/>
            <column name="last_name" type="varchar(16)"/>
            <column name="account_number" type="varchar(8)"/>
            <column name="iban" type="varchar(20)"/>
            <column name="balance" type="number(12,3)"/>
            <column name="created_at" type="timestamp"/>
            <column name="updated_at" type="timestamp"/>
        </createTable>
        <addNotNullConstraint tableName="accounts" columnName="id" columnDataType="varchar(32)"/>
        <addPrimaryKey tableName="accounts" columnNames="id" constraintName="accts_id_pk"/>
        <addNotNullConstraint tableName="accounts" columnName="account_number" columnDataType="varchar(8)"/>
        <addNotNullConstraint tableName="accounts" columnName="iban" columnDataType="varchar(20)"/>
        <addNotNullConstraint tableName="accounts" columnName="balance" columnDataType="number(12,3)"/>
        <addNotNullConstraint tableName="accounts" columnName="created_at" columnDataType="timestamp"/>

        <createTable tableName="transactions">
            <column name="id" type="varchar(36)"/>
            <column name="account_id" type="varchar(32)"/>
            <column name="amount" type="number(12,3)"/>
            <column name="type" type="varchar(32)"/>
            <column name="message" type="varchar(255)"/>
            <column name="created_at" type="timestamp"/>
        </createTable>
        <addNotNullConstraint tableName="transactions" columnName="id" columnDataType="varchar(36)"/>
        <addPrimaryKey tableName="transactions" columnNames="id" constraintName="txs_id_pk"/>
        <addNotNullConstraint tableName="transactions" columnName="account_id" columnDataType="varchar(32)"/>
        <addForeignKeyConstraint baseTableName="transactions" baseColumnNames="account_id"
                                 referencedTableName="accounts" referencedColumnNames="id"
                                 constraintName="txs_accts_fk"/>
        <addNotNullConstraint tableName="transactions" columnName="amount" columnDataType="number(12,3)"/>
        <addNotNullConstraint tableName="transactions" columnName="type" columnDataType="varchar(32)"/>
        <addNotNullConstraint tableName="transactions" columnName="created_at" columnDataType="timestamp"/>
    </changeSet>
</databaseChangeLog>
